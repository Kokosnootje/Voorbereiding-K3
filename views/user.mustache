<!-- Load the header -->
{{> layouts/header }}

<!-- Start of the page -->
<h3>Gebruikers</h3>
Hier kan je gebruikers zien en wijzigingen.

<section class="table-responsive">
 <table class="table table-bordered table-striped table-condensed">
  <thead>
  <tr>
      <th>Voornaam</th>
      <th>Achternaam</th>
      <th>Groep</th>
      <th>Geb. datum</th>
      <th>Opleiding</th>
      <th>Bewerken</th>
  </tr>
  </thead>
     <tbody>
        {{#users}}
        <tr>
            <td>{{ firstname }}</td>
            <td>{{ lastname }}</td>
            <td>{{ class }}</td>
            <td>{{ date_of_birth }}</td>
            <td> {{ education }}</td>
            <td>
                <a href="/?page=user&action=edit&id={{ id }}" class="btn btn-outline-primary btn-sm"> Edit </a>
            </td>
        </tr>
        {{/users}}
     </tbody>
 </table>

    <!-- Load the footer -->
    {{> layouts/footer }}